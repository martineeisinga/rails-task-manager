<h1>This is your To Do List</h1>

<%= link_to "New Task", tasks_new_path%>


<%@tasks.each do |task| %>
<h2><%= link_to task.name, task_path(task) %></h2>
<p><%= task.description %></p>
<p><%= task.deadline %></p>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%= link_to "Edit task", task_edit_path(task) %>
<% end %>


